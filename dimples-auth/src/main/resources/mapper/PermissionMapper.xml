<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dimples.auth.mapper.PermissionMapper">
	<resultMap id="BaseResultMap" type="com.dimples.auth.po.Permission">
		<!--@mbg.generated-->
		<!--@Table db_base_permission.tb_permission-->
		<id column="permission_id" jdbcType="BIGINT" property="permissionId" />
		<result column="permission_name" jdbcType="VARCHAR" property="permissionName" />
		<result column="permission_url" jdbcType="VARCHAR" property="permissionUrl" />
		<result column="permission" jdbcType="VARCHAR" property="permission" />
		<result column="permission_type" jdbcType="VARCHAR" property="permissionType" />
		<result column="status" jdbcType="TINYINT" property="status" />
		<result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
		<result column="modify_date" jdbcType="TIMESTAMP" property="modifyDate" />
	</resultMap>
	<sql id="Base_Column_List">
		<!--@mbg.generated-->
		permission_id, permission_name, permission_url, permission, permission_type, `status`,
		create_date, modify_date
	</sql>

	<select id="getRolePermission" resultType="com.dimples.common.dto.PermissionDTO">
		select
		tp.permission_id, permission_name, permission_url, permission, permission_type,
		`status`,create_date, modify_date
		from tb_permission tp
		join tb_permission_role tpr on tp.permission_id = tpr.permission_id
		where tpr.role_id = #{roleId,jdbcType=INTEGER}
	</select>
</mapper>